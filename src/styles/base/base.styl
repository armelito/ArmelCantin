*,
*:after,
*:before
  box-sizing border-box
  margin 0
  padding 0
  user-select none
  cursor none

html,
body
  background $background
  position fixed
  overflow hidden
  top 0
  bottom 0
  left 0
  right 0

img
  width 100%
  height 100%
  object-fit cover
  vertical-align middle

.experience
  //position fixed
  width 100vw
  height 100vh
