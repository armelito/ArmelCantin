.project
  @extend .page
  position relative

  &__hero
    position fixed
    top 0
    left 0
    width 100vw
    height 100vh

    &__image
      position relative
      width 100%
      height 100%

    &__texts
      position absolute
      top 110%
      left 14%

      transform translateY(-50%)
      width ratio(660)

      h1
        color white
        opacity 0
        will-change opacity 
      
      p 
        width ratio(400) 
        color rgb(126, 126, 126)
        opacity 0
        will-change opacity 

  &__filtre
    position absolute
    top 0
    left 0

    width 100vw
    height 100vh

    transform-origin bottom
    transform scaleY(0)
    background rgb(0,0,0)
    background linear-gradient(0deg, rgba(0,0,0,0.95) 0%, rgba(10,10,10,0.76) 46%, rgba(15,15,15,0.3) 100%)

  &__media
    width 100vw
    height 100vh


